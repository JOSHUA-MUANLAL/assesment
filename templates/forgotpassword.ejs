<body>
    <div  class="md:bg-[url('images/ipad.jpeg')] lg:bg-[url('images/wall.jpeg')] sm:bg-[url('images/ipad.jpeg')] bg-no-repeat bg-cover bg-[url('images/small.jpeg')]  h-full w-full lg:w-full lg:h-full  flex flex-col items-center justify-center min-h-screen ">
        
        
        <div class="bg-white bg-opacity-50 text-black px-5 pb-5 mt-4 rounded-3xl">
            <%if (typeof result !== 'undefined' && result !== null){  %>
                <h1 id="heading" class="text-md text-red-400 lg:text-3xl sm:text-2xl text-center font-bold text-gray-800 mb-:w-6 font-mono " >Your Password is </h1>
                <center><span class="underline text-red-800 text-lg text-center"><%= result.password %></span></center>
                <% }else{  %>
                    <h1 id="heading" class="text-md lg:text-3xl sm:text-2xl text-center font-bold text-gray-800 mb-:w-6 font-mono " >Welcome User Please enter Email</h1>


            <form action="/forgot" method="post" class=" flex flex-col space-y-1 font-mono lg:flex-col  lg:space-y-0 mt-5 lg:text-1xl rounded-md">
           

            Email<input type="email" placeholder="example@gmail.com" name="mail">
           
            
            
            <input type="submit" class="border bg-red-200 mt-3" value="Done">
        </form>
          <% }%>
        </div>
      </div>  
    
